<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/graffiti_area"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/graffiti_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/image_in_graffiti_activity" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/choose_graffiti_color"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:columnCount="6"
            app:orientation="horizontal"
            app:rowCount="1"
            tools:context="com.example.android_gridlayout.MainActivity">

            <ImageView
                android:id="@+id/color_red"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:contentDescription="@string/graffiti_color_red"
                android:gravity="center"
                app:layout_columnWeight="1"
                app:layout_gravity="fill" />

            <ImageView
                android:id="@+id/color_blue"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:contentDescription="@string/graffiti_color_blue"
                android:gravity="center"
                app:layout_columnWeight="1"
                app:layout_gravity="fill" />

            <ImageView
                android:id="@+id/color_green"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:contentDescription="@string/graffiti_color_green"
                android:gravity="center"
                app:layout_columnWeight="1"
                app:layout_gravity="fill" />

            <ImageView
                android:id="@+id/color_gray"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:contentDescription="@string/graffiti_color_gray"
                android:gravity="center"
                app:layout_columnWeight="1"
                app:layout_gravity="fill" />

            <ImageView
                android:id="@+id/color_white"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:contentDescription="@string/graffiti_color_white"
                android:gravity="center"
                app:layout_columnWeight="1"
                app:layout_gravity="fill" />
        </android.support.v7.widget.GridLayout>

    </RelativeLayout>
</LinearLayout>
