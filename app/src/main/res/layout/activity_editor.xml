<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/edit_area"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="bottom"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/image_to_edit" />

    <android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/function_bar_gridlayout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:columnCount="3"

        tools:context="com.example.android_gridlayout.MainActivity"
        app:orientation="horizontal"
        app:rowCount="1">

        <TextView
            android:id="@+id/stylize_text"
            android:gravity="center"
            android:text="@string/stylize"
            app:layout_columnWeight="1"
            app:layout_gravity="fill" />

        <TextView
            android:id="@+id/tool_text"
            android:gravity="center"
            android:onClick="show"
            android:text="@string/choose_tool"
            app:layout_columnWeight="1"
            app:layout_gravity="fill" />

        <TextView
            android:id="@+id/import_text"
            android:gravity="center"
            android:onClick="export"
            android:text="@string/export"
            app:layout_columnWeight="1"
            app:layout_gravity="fill" />
    </android.support.v7.widget.GridLayout>
</LinearLayout>


